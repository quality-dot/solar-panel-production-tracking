# Solar Panel Production Tracking System - Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solar_panel_tracking_dev
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database SSL (set to 'true' for production with SSL certificates)
DB_SSL=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters

# JWT Token expiration (default: 8 hours for full production shift)
JWT_EXPIRES_IN=8h

# Password hashing rounds (default: 12, higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated for multiple origins)
# For development: http://localhost:3000,http://localhost:3001,http://localhost:5173
# For production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log directory (relative to backend folder)
LOG_DIR=./logs

# =============================================================================
# MANUFACTURING CONFIGURATION
# =============================================================================
# Maximum concurrent stations (default: 8 for dual-line production)
MAX_CONCURRENT_STATIONS=8

# Station operation timeout in milliseconds (default: 30 seconds)
STATION_TIMEOUT_MS=30000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Rate limiting window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 1000 for manufacturing operations)
RATE_LIMIT_MAX=1000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection settings for session management and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis memory and TTL settings
REDIS_MAX_MEMORY=256mb
REDIS_SESSION_TTL=86400
REDIS_PERMISSION_CACHE_TTL=900
REDIS_BLACKLIST_TTL=604800

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test environment port (default: 3001)
TEST_PORT=3001

# Test database name (default: solar_panel_tracking_test)
TEST_DB_NAME=solar_panel_tracking_test

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production deployment
# NODE_ENV=production
# PORT=8080
# DB_HOST=your-production-db-host
# DB_NAME=your-production-db-name
# DB_USER=your-production-db-user
# DB_PASSWORD=your-production-db-password
# DB_SSL=true
# JWT_SECRET=your-production-jwt-secret
# CORS_ORIGIN=https://yourdomain.com
# LOG_LEVEL=warn
